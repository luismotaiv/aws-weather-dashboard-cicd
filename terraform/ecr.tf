# Parameter Store for ECR URLs (for CI/CD pipeline)
resource "aws_ssm_parameter" "backend_ecr_url" {
  name        = "/${var.project_name}/ecr/backend/url"
  description = "ECR URL for backend repository"
  type        = "String"
  value       = aws_ecr_repository.backend.repository_url

  tags = {
    Name = "${var.project_name}-backend-ecr-url"
  }
}

